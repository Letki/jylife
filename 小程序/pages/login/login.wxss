/* pages/index/login/login.wxss */
.container {
  background: #7acfa6;
  align-items: stretch;
  padding: 0;
  height: 100%;
  overflow: hidden;
}
.logo{
  width: 750rpx;
  height: 500rpx;
  background-color: #69ABE8;
  padding:0 0 0 50rpx;
}
.logo image{
  width: 550rpx;
  height: 100rpx;
  position: absolute;
  top: 15%;
  left: 13%;
}
.circle{
  border-radius: 50%;
  width: 750rpx;
  height: 300rpx;
  background-color: #69ABE8;
  position: absolute;
  top: 350rpx;
}
.bingdin{
  background-color:#ebeaea;
  padding-top: 200rpx;
  height:520rpx;
}
.input-group {
  display: flex;
  align-items: center;
  padding: 25rpx 10rpx;
  margin: 40rpx 3%;
  background: #fff;
  border-radius: 5px;
  border: 2px solid #f4f4f4;
  transition: all .25s ease-in-out;
}
.input-group.active {
  border: 2px solid #7acfa6;
}
.input-label {
  color: #888;
  font-size: 13pt;
  height: 25rpx;
  line-height: 25rpx;
  padding: 0 25rpx;
  border-right: 1px solid #d8d8d8; 
}
.input-input{
  padding-left: 20rpx;
}
.confirm-btn {
  font-size: 13pt;
  line-height: 85rpx;
  height: 85rpx;
  background: #69ABE8;
  color: #fff;
  text-align: center;
  border-radius: 5px;
  margin: 50rpx 3%;
}
.confirm-btn:active {
  opacity: .8;
}